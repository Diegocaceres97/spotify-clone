---
import Layout from "../../layouts/Layout.astro";
import { allPlaylists, playlists, songs } from "@/lib/data";

import PlayListItemCard from "@/components/PlayListItemCard.astro";

    const {id} = Astro.params;
    const playlist = allPlaylists.find(playlist=> playlist.id === id)
    const playListSongs = songs.filter(song=> song.albumId === playlist?.albumId)
---

<Layout title="Spotify Clone">
  <div
    id="playlist-container"
    class="relative flex-col bg-zinc-900 overflow-x-hidden"
    transition:name=`playlist ${id} box`
  >
    <!-- PageHeader -->

    <header class="flex flex-col items-center gap-8 px-6">
        <picture class="aspect-square w-full h-auto flex-none">
            <img
              src={playlist?.cover}
              alt={`Cover of ${playlist?.title}`}
              class="object-cover w-full h-full rounded-md"
              transition:name=`playlist ${id} image`
            />
          </picture>
    </header>

    <div class="relative z-10 px-6 pt-10">
     
      
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-800/80">
    </div>
  </div>

</Layout>

